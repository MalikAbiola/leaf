// Smartphone, both orientations
@media (max-width: $screen-xs-max)
  body
    overflow:hidden
    .sharer,
    .desktop-nav
      display:none
    .show-on-mobile
      inline()

  // Smartphone, vertical
  @media (orientation: portrait)
    body
      // Your code here
      &:before
        content: 'smartphone vertical'
  
  // smartphone, horizontal
  @media (orientation: landscape)
    body
      // Your code here
      &:before
        content: 'smartphone horizontal'