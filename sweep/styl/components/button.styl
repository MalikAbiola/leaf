button()
  padding:10px 20px
  border-radius:2px
  text-transform:uppercase
  font-size:90%
  width:auto !important
  inline()
  depth(1)
input[type=submit]
  -webkit-appearance:none
  border:0
  smooth-font()
  button()
  &:focus
    outline:0
  &:hover
    color:darken(#fff, 10%)
  &.flat
    color:inherit
.button
  button()
  &.flat
    background:none
    depth(0)
a
  &.button
    &:hover
      text-decoration:none
      color:darken(#fff, 10%)
    &.flat
      color:inherit